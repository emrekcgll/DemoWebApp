@using X.PagedList
@using X.PagedList.Mvc.Core
@using DataAccessLayer.Entity
@model IPagedList<Food>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Food Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Update</th>
        <th>Details</th>
        <th>Delete</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FoodId</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>@item.Category.CategoryName</td>

            <td><a href="/Food/UpdateFood/@item.FoodId" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-info">Details</a></td>
            <td><a href="/Food/DeleteFood/@item.FoodId" class="btn btn-danger">Delete</a></td>

        </tr>
    }
</table>
<a href="/Food/AddFood/" class="btn btn-primary">New Food</a>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))